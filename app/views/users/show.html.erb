<div class="row">
	<aside class="span4 user" user_id="<%= @user.id%>">
		<section>
			<%= render "shared/user_info", user: @user %>
		</section>
		<section>
			<%= render "shared/user_actions", user: @user %>
		</section>
	</aside>
	<div class="span8">
		<h1>Posts</h1>
		<ul class="posts">
			<%= render partial: "shared/post", collection: @posts %>
		</ul>
		<%= will_paginate @posts %>
		<%= page_entries_info @posts %>
	</div>
</div>
